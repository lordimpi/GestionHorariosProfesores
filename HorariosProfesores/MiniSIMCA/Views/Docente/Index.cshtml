@model IEnumerable<DataAccess.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Docentes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa-solid fa-circle-plus"></i> Crear Docente
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Docente_Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente_Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente_TipoIdentificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente_Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente_Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente_TipoContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente_Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_TipoIdentificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_TipoContrato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Docente_Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fa-solid fa-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fa-solid fa-book-open"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
