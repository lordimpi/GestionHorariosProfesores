@model MiniSIMCA.Models.UserDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h4>Información Docente</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_Nombres)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_Nombres)
                        </dd>
                    </div>
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_Apellidos)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_Apellidos)
                        </dd>
                    </div>
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_TipoIdentificacion)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_TipoIdentificacion)
                        </dd>
                    </div>
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_Identificacion)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_Identificacion)
                        </dd>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_Tipo)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_Tipo)
                        </dd>
                    </div>
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_TipoContrato)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_TipoContrato)
                        </dd>
                    </div>
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.Docente_Area)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Docente_Area)
                        </dd>
                    </div>
                    <div class="form-group">
                        <dt>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Estado)
                        </dd>
                    </div>
                </div>
            </div>

            <div class="form-group mt-2">
                <a asp-action="index" asp-controller="home" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
