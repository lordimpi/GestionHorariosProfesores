@model DataAccess.Data.Entities.Programa

<table class="table table-striped table-responsive-md table-bordered smfont" id="CompetenciaTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Competencias.FirstOrDefault().Competencia_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competencias.FirstOrDefault().Competencia_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Competencias.FirstOrDefault().IsActive)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddCompetencia", "Programas", new { id = Model?.Programa_Id }, Context.Request.Scheme)' , 'Nueva Competencia')"
                   class="btn btn-sm btn-success text-white">
                    <i class="fa fa-plus-circle"></i> Competencia
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.Competencias)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Competencia_Id)
                </td>
                <td>
                    <a asp-action="DetailsCompetencia" asp-controller="Competencia"
                        asp-route-Id="@item.Competencia_Id">
                        @Html.DisplayFor(modelItem => item.Competencia_Nombre)
                    </a>
                </td>
                <td>
                     @if (item.IsActive)
                    {
                        <div>
                            <input class="form-check-input" type="checkbox"
                           id="flexCheckCheckedDisabled" checked disabled>
                            <label class="form-check-label" for="flexCheckCheckedDisabled">
                                Activo
                            </label>
                        </div>
                    }
                    else
                    {
                        <div>
                            <input class="form-check-input" type="checkbox"
                           id="flexCheckCheckedDisabled" disabled>
                            <label class="form-check-label" for="flexCheckCheckedDisabled">
                                Desactivo
                            </label>
                        </div>
                    }
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("EditCompetencia", "Programa", new { id = item.Competencia_Id }, Context.Request.Scheme)' , 'Actualizar Competencia')"
                        class="btn btn-sm btn-warning">
                        <i class="fa fa-pencil-alt"></i>
                    </a>
                    <button data-id="@item.Competencia_Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>