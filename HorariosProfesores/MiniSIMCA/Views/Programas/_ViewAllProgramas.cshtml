@model IEnumerable<DataAccess.Data.Entities.Programa>

<table class="table table-striped table-responsive-md table-bordered smfont" id="ProgramasTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programa_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Programa_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompetenciasNumber)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Programas", new { id = 0 }, Context.Request.Scheme)' , 'Nuevo Programa')"
                   class="btn btn-sm btn-success text-white">
                    <i class="fa fa-plus-circle"></i> Programa
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Programa_Id)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Programas" asp-route-id="@item.Programa_Id">
                        @Html.DisplayFor(modelItem => item.Programa_Nombre)
                    </a>
                </td>
                <td>
                    @if (item.IsActivo)
                    {
                        <div>
                            <input class="form-check-input" type="checkbox"
                           id="flexCheckCheckedDisabled" checked disabled>
                            <label class="form-check-label" for="flexCheckCheckedDisabled">
                                Activo
                            </label>
                        </div>
                    }
                    else
                    {
                        <div>
                            <input class="form-check-input" type="checkbox"
                           id="flexCheckCheckedDisabled" disabled>
                            <label class="form-check-label" for="flexCheckCheckedDisabled">
                                Desactivo
                            </label>
                        </div>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetenciasNumber)
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Programas", new { id=item.Programa_Id }, Context.Request.Scheme)' , 'Actualizar Programa')"
                   class="btn btn-sm btn-warning">
                        <i class="fa fa-pencil-alt"></i>
                    </a>
                    <button data-id="@item.Programa_Id" class="btn btn-sm btn-danger deleteItem" data-bs-toggle="modal"
                        data-bs-target="#deleteDialog">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
