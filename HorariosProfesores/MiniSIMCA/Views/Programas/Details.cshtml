@model DataAccess.Data.Entities.Programa

@{
    ViewData["Title"] = "Details";
}

<flash dismissable="true" />

<h1>Detalles</h1>

<div>
    <partial name="_ProgramasDetails" />
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-rotate-left"></i> Regresar
    </a>
</div>

<!-- Content Wrapper. Contains page content -->
<div class="container-flui">
    <div class="card mt-2">
        <div class="card-header text-danger">
            <i class="fa fa-globe"></i>  <strong>Competencias</strong>
        </div>
        <div class="card-body">
            <div id="view-all">
                @await Html.PartialAsync("_ViewAllCompetencias", Model)
            </div>
        </div>
    </div>
</div>

<partial name="_AddOrEditDialog" />
<partial name="_DeleteDialog" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/showmodal.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#CompetenciaTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                },
                "aLengthMenu": [
                    [10, 25, 50, 100, -1],
                    [10, 25, 50, 100, "Todos"]
                ]
            });
        });
    </script>

    <script>
        sc_deleteDialog.openModal('deleteItem', true, 'btnYesDelete', '/Programas/DeleteCompetencia/', false);
    </script>
}